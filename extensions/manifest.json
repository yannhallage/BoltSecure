{
    "manifest_version": 3,
    "name": "BoltSecure",
    "version": "1.0.0",
    "description": "Gestionnaire sécurisé",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    }
}